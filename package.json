{
    "version": "1.2.5",
    "name": "rewrk",
    "repository": "jdeurt/rewrk",
    "description": "Dead simple React web workers.",
    "module": "dist/index.mjs",
    "main": "dist/index.js",
    "types": "types/index.d.ts",
    "license": "MIT",
    "type": "module",
    "author": {
        "name": "Juan de Urtubey",
        "email": "jdeurt@gmail.com",
        "url": "https://jdeurt.xyz"
    },
    "files": [
        "dist",
        "types"
    ],
    "exports": {
        ".": {
            "import": "./dist/index.mjs",
            "require": "./dist/index.js"
        },
        "./package.json": "./package.json"
    },
    "engines": {
        "node": ">=16"
    },
    "scripts": {
        "build": "rollup -c",
        "prepublishOnly": "npm run build",
        "types": "tsc --noEmit",
        "test": "jest",
        "publish:base": "git push origin main --tags && npm publish",
        "publish:patch": "npm version patch && yarn publish:base",
        "publish:minor": "npm version minor && yarn publish:base",
        "publish:major": "npm version major && yarn publish:base"
    },
    "keywords": [
        "web worker",
        "react"
    ],
    "devDependencies": {
        "@rollup/plugin-node-resolve": "13.1.3",
        "@types/jest": "^28.1.7",
        "@types/react": "^18.0.26",
        "@typescript-eslint/eslint-plugin": "^5.30.7",
        "@typescript-eslint/parser": "^5.30.7",
        "eslint": "^8.20.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-unicorn": "^43.0.2",
        "jest": "^28.1.3",
        "prettier": "^2.7.1",
        "rollup": "2.66.1",
        "rollup-plugin-typescript2": "0.27.1",
        "ts-jest": "^28.0.8",
        "typescript": "4.5.5"
    },
    "peerDependencies": {
        "react": ">=16"
    },
    "publishConfig": {
        "access": "public",
        "registry": "https://registry.npmjs.org"
    }
}
